{
  "tasks": [
    {
      "label": "Build", // 任务名
      // "label": "C: clang++ build active file",
      "type": "cppbuild", // 任务类型，cppbuild是vscode的内置任务类型
      "command": "/usr/bin/clang", // 任务执行的命令
      "args": [
        "-std=c2x", //控制编译的版本，以最后一个为准
        "-o2",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-o",
        "${fileDirname}/Trash/${fileBasenameNoExtension}",
        "-g",
        "-g3",
        "${file}", //单文件的设置
        // "${fileDirname}/*.c", //多文件的设置
        "-Wall"
      ],
      "options": {
        "cwd": "${fileDirname}" // 任务执行的工作目录为文件所在的目录
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // "presentation": {
      //   "echo": false,
      //   "reveal": "silent",
      //   "focus": true,
      //   "panel": "shared",
      //   "showReuseMessage": true,
      //   "clear": true
      // },
      "presentation": {
        "echo": true, // 在终端中回显命令
        "reveal": "never", // 从不显示终端窗口
        "focus": true, // 不聚焦到终端窗口
        // "panel": "dedicated", // 使用专用的终端面板
        "panel": "shared", // 使用共享的终端面板
        "showReuseMessage": false, // 不显示重用终端的消息
        "clear": true, // 清理终端内容
        "close": true // 任务完成后自动关闭终端
      },
      "detail": "Tasks generated by the Debugger" //任务的详细信息
    },
    {
      "label": "Clean", // 清理任务
      "type": "shell",
      "command": "touch",
      "args": [
        // "-rf",
        // "${fileDirname}/.Trash/${fileBasenameNoExtension}",
        "${fileDirname}/Trash"
      ],
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "echo": true, // 在终端中回显命令
        "reveal": "never", // 从不显示终端窗口
        "focus": false, // 不聚焦到终端窗口
        // "panel": "dedicated", // 使用专用的终端面板
        "panel": "shared", // 使用专用的终端面板
        "showReuseMessage": false, // 不显示重用终端的消息
        "clear": true, // 清理终端内容
        "close": true // 任务完成后自动关闭终端
      }
    },
    {
      "label": "BuildAndDebug",
      "dependsOn": ["Build"], // 依赖于 Build 任务
      "dependsOrder": "sequence", // 依次执行任务
      "type": "shell",
      "command": "echo", // 可以是一个无操作的命令
      "args": ["Build and Debug sequence initiated."]
    },
    {
      "label": "Debug",
      "type": "shell",
      "dependsOn": ["BuildAndDebug"], // 依赖于 BuildAndDebug 任务
      "command": "lldb",
      "args": ["${workspaceFolder}/Trash/${fileBasenameNoExtension}"],
      "problemMatcher": [],
      "group": "none"
    }
  ],
  "version": "2.0.0"
}
